<main class="w-full pr-1 pl-1 mx-auto">
  <%= link_to sanitize("&larr; Back to quotes"), quotes_path %>

  <%= turbo_frame_tag @quote, target: '_top' do %>

  <div class='border my-5 border-indigo-400 bg-white p-5 rounded-lg shadow-lg'>
    <h1 class="text-4xl mb-5"><%= @quote.name %></h1>

    <div class="flex flex-wrap gap-3 flex-col">
      <p class="">Created at: <%= @quote.created_at %></p>
      <p class="">Updated at: <%= @quote.updated_at %></p>
    </div>
  </div>

  <div class='border border-indigo-400 bg-white p-5 rounded-lg shadow-lg'>
    <div class='flex'>
      <%= button_to "Delete", 
        quote_path(@quote, { main_page: 'delete' }), form_class: 'inline-flex', 
        method: :delete, 
        data: { turbo_confirm: 'Are you sure you want to delete this?' },
        class: "items-center rounded-md bg-red-400 text-white border-red-500" \
      " px-3 py-2 text-sm font-semibold shadow-sm hover:bg-red-500" %>
      <%= button_to "Edit", edit_quote_path(@quote), method: :get, form_class: 'ml-3 inline-flex',
        data: { turbo_frame: "_top" }, class: "items-center rounded-md bg-white" \
        " px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>
  <% end %>
</main>
