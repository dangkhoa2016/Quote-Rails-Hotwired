<%= form_with model: @quote, html: { class: "flex flex-wrap gap-1 bg-white shadow-md" \
  " rounded lg:p-8 md:p-6 p-4 mb-5 flex-col md:flex-row" } do |form| %>

  <% if @main_page %>
  <%= form.hidden_field :main_page, value: @main_page %>
  <% end %>
    
  <% if @quote.errors.any? %>
    <div class="w-full p-1 text-rose-950 rounded bg-slate-300">
      <%= @quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="flex-1">
    <%= form.label :name, class: "sr-only" %>
    <%= form.text_field :name, class: "block invalid:border-red-500 shadow appearance-none border rounded w-full" \
      " py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex ms-0 md:ms-2 mt-2 md:mt-0 gap-2">
    <% if @main_page && @quote.persisted? %>
      <%= link_to "Cancel", quote_path(@quote), 
        data: { turbo_frame: "_top" },
        class: "inline-flex items-center rounded-md bg-white" \
        " px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <% else %>
      <%= link_to "Cancel", quotes_path, 
        data: { turbo_frame: @main_page ? "_top" : nil },
        class: "inline-flex items-center rounded-md bg-white" \
        " px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <% end %>

    <%= form.submit class: "inline-flex items-center rounded-md bg-green-600 px-3 hover:cursor-pointer" \
      " py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline" \
      " focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600"  %>
  </div>
<% end %>
