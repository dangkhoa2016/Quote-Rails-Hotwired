<main class="w-full pr-1 pl-1 mx-auto">
  <%= link_to sanitize("&larr; Back to quote"), quote_path(quote) %>

  <div class="flex flex-wrap gap-3 mt-5 flex-col">
    <h1 class="text-4xl">Edit quote</h1>

    <%= turbo_frame_tag quote do %>
      <%= render "form", quote: quote %>
    <% end %>
  </div>
</main>
