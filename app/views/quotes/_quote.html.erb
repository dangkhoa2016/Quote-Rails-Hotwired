<div class="flex gap-2 justify-between items-center mb-1 bg-slate-400 rounded-md p-2">
  <%= link_to quote.name, quote_path(quote) %>
  <div class="flex flex[0_0_auto] self-start gap-1 justify-between items-center mb-2 p-1 ">
    <%= button_to "Delete", quote_path(quote), method: :delete, class: "inline-flex items-center rounded-md bg-white" \
      " px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= button_to "Edit", edit_quote_path(quote), method: :get, class: "inline-flex items-center rounded-md bg-white" \
      " px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  </div>
</div>
