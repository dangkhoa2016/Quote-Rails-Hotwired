
<div id="<%= dom_id inventory %>" class="bg-white p-4 mb-4 shadow-md rounded-md">
  <% if action_name != "show" %>
    <%= link_to "Show this inventory", inventory, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this inventory", edit_inventory_path(inventory), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>

  <% if @quote.blank? %>
    <p class="text-lg font-bold mb-2">
      <%= link_to inventory.quote.name, inventory.quote, class: "text-blue-500" %>
    </p>
  <% end %>

  <ul class="list-disc pl-6">
    <li><strong>Quantity:</strong> <%= inventory.quantity %></li>
    <li><strong>Location:</strong> <%= inventory.location %></li>
    <li><strong>Purchase Date:</strong> <%= inventory.purchase_date %></li>
    <li><strong>Purchase Price:</strong> <%= number_to_currency(inventory.purchase_price) %></li>
    <li><strong>Expiration Date:</strong> <%= inventory.expiration_date %></li>
    <li><strong>Manufacturer:</strong> <%= inventory.manufacturer %></li>
    <li><strong>Serial Number:</strong> <%= inventory.serial_number %></li>
    <li><strong>Notes:</strong> <%= inventory.notes %></li>
  </ul>

  <% if action_name != "show" %>
    <%= link_to "Show this inventory", inventory, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this inventory", edit_inventory_path(inventory), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
